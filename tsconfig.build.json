{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "noUnusedLocals": false,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "preserve",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true
  },
  "include": ["build/"]
}